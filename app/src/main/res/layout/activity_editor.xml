<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditorActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/Add_gate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:src="@drawable/inc_icon"
        android:backgroundTint="@color/cyan_500"
        android:layout_marginBottom="20sp"
        android:layout_marginRight="20sp"
        />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60sp"
        android:background="@color/dark_grey"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/project_name_bar"
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="project 1"
            android:layout_marginLeft="20sp"
            android:textSize="17sp"
            android:textColor="@color/white"
            android:singleLine="true"
            />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           android:singleLine="true"
           android:layout_marginTop="28sp"
           android:layout_marginLeft="20sp"
           android:text="Elements:"
           />
        <TextView
            android:id="@+id/editor_elements_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_marginTop="28sp"
            android:layout_marginLeft="86sp"
            android:text="0"
            />
        <TextView
            android:id="@+id/editor_connection_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_marginTop="28sp"
            android:layout_toRightOf="@id/editor_elements_count"
            android:layout_marginLeft="10sp"
            android:text="Connections:"
            />
        <TextView
            android:id="@+id/editor_connections_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:singleLine="true"
            android:layout_marginTop="28sp"
            android:layout_marginLeft="5sp"
            android:layout_toRightOf="@id/editor_connection_tag"
            android:text="0"
            />
        <ImageButton
            android:id="@+id/project_options"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/dark_grey"
            android:layout_alignParentRight="true"
            android:src="@drawable/menu_icon"
            app:tint="@color/white"
            />
        <ImageButton
            android:id="@+id/project_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/save_icon"
            android:backgroundTint="@color/dark_grey"
            app:tint="@color/white"
            android:layout_toLeftOf="@id/project_options"
            />
    </RelativeLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dark_grey"
        >

    <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="85sp"
           android:orientation="horizontal"
           android:background="@color/dark_grey"
           >
      <LinearLayout
          android:id="@+id/recenter"
          android:layout_width="60sp"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:clickable="true"
          >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/recenter_icon"
            app:tint="@color/white"
            android:clickable="false"
            />
          <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Center"
          android:textColor="@color/white"
          android:textAlignment="center"
          android:layout_gravity="center_horizontal"
           android:layout_marginTop="15sp"
          />
      </LinearLayout>

        <LinearLayout
            android:id="@+id/touch_mode"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            >
        <ImageView
            android:layout_width="wrap_content"
           android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:src="@drawable/touch_icon"
            app:tint="@color/white"
            android:clickable="false"

            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Touch\n Mode"
                android:layout_marginTop="10sp"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                />
        </LinearLayout>

       <LinearLayout
           android:id="@+id/edit_mode"
           android:layout_width="60sp"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="center_horizontal"
           android:clickable="true"
           >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit_icon"
            app:tint="@color/white"
            android:clickable="false"
            />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Edit\n Mode"
               android:layout_marginTop="10sp"
               android:textColor="@color/white"
               android:textAlignment="center"
               />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/disconnect_button"
           android:layout_width="60sp"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="center_horizontal"
           android:clickable="true"
           >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/connection_delete"
            app:tint="@color/white"
            android:clickable="false"
            />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Break"
               android:layout_marginTop="20sp"
               android:textColor="@color/white"
               android:textAlignment="center"
               />
       </LinearLayout>

       <LinearLayout
           android:id="@+id/delete_button"
           android:layout_width="60sp"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:gravity="center_horizontal"
           android:clickable="true"
           >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/delete_icon"
            app:tint="@color/white"
            android:clickable="false"
            />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Delete"
               android:textColor="@color/white"
               android:textAlignment="center"
               android:layout_marginTop="20sp"
               />
       </LinearLayout>
        <LinearLayout
            android:id="@+id/add_pin_button"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pin_icon"
                app:tint="@color/white"
                android:clickable="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add pin to ic"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/remove_pin_button"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/remove_pin"
                app:tint="@color/white"
                android:clickable="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Remove pin"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/make_ic_button"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/inc_icon"
            app:tint="@color/white"
            android:clickable="false"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make \nic"
                android:textColor="@color/white"
                android:textAlignment="center"
               android:layout_marginTop="10sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pin_name"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pin_name_change_iconj"
            app:tint="@color/white"
            android:clickable="false"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Label\npin"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/text_label_change"
            android:layout_width="60sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/text_field_icon"
                app:tint="@color/white"
                android:clickable="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Text Label"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/customize_gate"
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/customize_gate_icon"
            app:tint="@color/white"
            android:clickable="false"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customize\nElement"
                android:textColor="@color/white"
                android:textAlignment="center"
               android:layout_marginTop="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/export_layout"
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/export_icon"
                app:tint="@color/white"
                android:clickable="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Export\nProject"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="10sp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/source_layout"
            android:layout_width="70sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/source_icon"
                app:tint="@color/white"
                android:clickable="false"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show\nSource"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:layout_marginTop="5sp"
                />
        </LinearLayout>
  </LinearLayout>
    </HorizontalScrollView>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:focusable="true"
      android:background="@color/dark_grey"
      >

    <com.logic.logicsimulator.EditorLayout
        android:id="@+id/main_frame"
        android:layout_width="5000sp"
        android:layout_height="5000sp"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/Grey"
/>
  </FrameLayout>
   </LinearLayout>
</FrameLayout>