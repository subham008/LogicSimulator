<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#303036"
    android:orientation="vertical"
    tools:context=".CustomGateBottomsheet"
    >

    <TextView
        android:id="@+id/gate_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="gate name"
        android:layout_marginTop="10sp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"/>

     <FrameLayout
         android:id="@+id/preview_layout"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="5sp" />

     <TextView
         android:id="@+id/gate_type_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Default"
         android:layout_marginTop="5sp"
         android:textSize="20sp"
         android:textColor="@color/white"
         android:layout_gravity="center_horizontal"
         />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Element name"
        android:layout_marginTop="10sp"
        android:textColor="@color/white"
        android:textSize="20sp"
        />
     <EditText
         android:id="@+id/gate_name_edit"
         android:layout_width="350sp"
         android:layout_height="60sp"
         android:layout_marginTop="10sp"
         android:layout_gravity="center_horizontal"
         android:text="Default name"
         android:textColor="@color/white"
         android:background="@drawable/round_corner_background"
         />
     <Button
         android:id="@+id/save_title_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="save above title"
         android:textColor="@color/white"
         android:layout_gravity="center_horizontal"
         android:backgroundTint="@color/cyan_800"
         />
     <TextView
         android:id="@+id/custom_element_list_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Customize Element"
         android:layout_marginTop="10sp"
         android:textColor="@color/white"
         android:textSize="20sp"
         />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
   <ListView
       android:id="@+id/customize_option_list"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:nestedScrollingEnabled="true"
       android:dividerHeight="5.0sp"
       android:layout_gravity="center_horizontal"
       android:orientation="vertical"
       />

    </FrameLayout>
</LinearLayout>