<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark_grey"
    tools:context=".ProjectSettingBottomSheet">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="project settings"
      android:textSize="30sp"
      android:textColor="@color/cyan_200"
      android:layout_gravity="center_horizontal"
      />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20sp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version"
                android:textColor="@color/white"
                android:layout_marginLeft="20sp"
                android:textSize="20sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10sp"
                >
                <EditText
                    android:id="@+id/project_setting_version_edittext"
                    android:layout_width="200sp"
                    android:layout_height="50sp"
                    android:text="something"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_marginLeft="40sp"
                    android:background="@drawable/round_corner_background"
                    />
                <Button
                    android:id="@+id/project_setting_version_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/cyan_800"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20sp"
                    />
            </LinearLayout>
        </LinearLayout>
   <FrameLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20sp"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Text Label Visible"
           android:layout_gravity="center_vertical"
           android:textColor="@color/white"
           android:layout_marginLeft="20sp"
           android:textSize="20sp"
           />

       <androidx.appcompat.widget.SwitchCompat
           android:id="@+id/text_visible_switch"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="end"
           android:backgroundTint="@color/cyan_800"
           android:layout_marginEnd="20sp"
           />
   </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grid Lines Visible"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/grid_visible_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cyan_800"
            android:layout_gravity="end"
            android:layout_marginEnd="20sp"
            />
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wires  Visible"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/wires_visible_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cyan_800"
            android:layout_gravity="end"
            android:layout_marginEnd="20sp"
            />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signal  Visible"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20sp"
            android:textColor="@color/white"
            android:textSize="20sp"
            />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/signal_visible_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/cyan_800"
            android:layout_gravity="end"
            android:layout_marginEnd="20sp"
            />
    </FrameLayout>



        <Button
            android:id="@+id/set_default_sett"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SET DEFAULT SETTING"
            android:textColor="@color/white"
            android:backgroundTint="@color/cyan_800"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center_vertical"
           android:layout_marginTop="20sp"
           >
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/remove_icon"
               app:tint="@color/red_500"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Removable Pin"
               android:textColor="@color/white"
               />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/radio_button_checked_icon"
               app:tint="@color/green_300"
               android:layout_marginLeft="20sp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Selected Pin"
               android:textColor="@color/white"
               />
           <ImageView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/radio_button_checked_icon"
               app:tint="@color/yellow_300"
               android:layout_marginLeft="20sp"
               />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="IC Pin"
               android:textColor="@color/white"
               />
       </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>