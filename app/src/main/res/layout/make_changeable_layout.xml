<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_corner_background"
    >

    <TextView
        android:id="@+id/make_change_tag"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:text="input/output"
        android:textColor="@color/white"
        android:textSize="25sp"
         />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginBottom="10sp"
        >
    <ImageButton
        android:id="@+id/make_change_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cyan_800"
        android:src="@drawable/add_icon"
        />
      <TextView
          android:id="@+id/make_change_preview"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:text="566"
          android:textColor="@color/white"
          android:textSize="35sp"
          android:textAlignment="center"
          android:layout_marginLeft="20sp"
          />
    <ImageButton
        android:id="@+id/make_change_sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/cyan_800"
        android:src="@drawable/substract_icon"
        android:layout_marginLeft="20sp"
        />

        <Button
            android:id="@+id/make_change_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="save"
            android:textColor="@color/white"
            android:backgroundTint="@color/cyan_800"
            android:layout_marginLeft="60sp"
            android:layout_gravity="center_vertical"
            />
</LinearLayout>
</LinearLayout>