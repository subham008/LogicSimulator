<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_corner_background"
    android:orientation="vertical"
    >
  <FrameLayout
      android:layout_width="300sp"
      android:layout_height="wrap_content"
      android:layout_gravity="center_horizontal"
    >
  <TextView
      android:id="@+id/option_project_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="project name"
      android:singleLine="true"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit="marquee_forever"
      android:textIsSelectable="true"
      android:focusable="true"
      android:textColor="@color/orange"
      android:textSize="30sp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="20sp"
      />
    <ImageButton
        android:id="@+id/rename_project_buttonj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/edit_icon"
        android:backgroundTint="@color/dark_grey"
        app:tint="@color/white"
        android:layout_gravity="end|bottom"
      />
  </FrameLayout>
  <LinearLayout
      android:id="@+id/rename_layout"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:layout_marginTop="20sp"
      android:visibility="gone"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter new name"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginLeft="10sp"
      />
    <EditText
        android:id="@+id/rename_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="name"
        android:textColor="@color/white"
      />
    <Button
        android:id="@+id/rename_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:backgroundTint="@color/cyan_800"
        android:layout_gravity="center_horizontal"
      />
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="20sp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Elements Count: "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:id="@+id/option_elements_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textIsSelectable="true"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="10sp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Connections Count: "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:id="@+id/option_connevtions_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textIsSelectable="true"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="10sp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Created: "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:id="@+id/option_creationdate_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/10/10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textIsSelectable="true"
        />
  </LinearLayout>
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:layout_marginTop="10sp"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Modified: "
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginLeft="20sp"
        />
    <TextView
        android:id="@+id/option_lastmodified_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10/10/10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textIsSelectable="true"
        />
  </LinearLayout>
  <LinearLayout
      android:id="@+id/option_open"
      android:layout_width="300sp"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_horizontal"
      android:layout_gravity="center_horizontal"
      android:background="@drawable/round_corner_background"
      android:layout_marginTop="20sp"
      android:clickable="true"
    >
  <ImageButton
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:backgroundTint="#00000000"
      android:src="@drawable/edit_icon"
      android:layout_gravity="center_horizontal"
      app:tint="@color/white" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Project"
        android:layout_gravity="center_vertical"
        android:textColor="@color/white"
      />
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_horizontal"
      android:layout_marginTop="30sp"
      android:layout_marginBottom="30sp"
    >

    <ImageButton
        android:id="@+id/option_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:src="@drawable/delete_icon"
        android:background="@color/dark_grey"
        app:tint="@color/white"
        android:layout_gravity="center_horizontal"

        />
    <ImageButton
        android:id="@+id/option_source_editor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/source_icon"
        android:background="@color/dark_grey"
        app:tint="@color/white"
        android:visibility="gone"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="70sp"
        />
    <ImageButton
        android:id="@+id/option_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/share_icon"
        android:background="@color/dark_grey"
        app:tint="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="70sp"
        />
  </LinearLayout>
